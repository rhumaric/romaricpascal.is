<!doctype html>
html(lang=`${i18n.language || defaultLanguage}`)
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet",href="/style.css")
    title= title
  body
    header
      nav(aria-labelledby="languageSwitcherHeading")
        h2#languageSwitcherHeading(hidden="") Languages
        a(href="/fr", hreflang="fr", aria-current=(i18n.language == 'fr' ? 'true' : null)) Francais
        | !{' '}
        a(href="/", aria-current=(i18n.language == 'en' ? 'true' : null)) English
        
    main
      != contents
